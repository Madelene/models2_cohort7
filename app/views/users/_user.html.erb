<%= div_for(user) do %>
  Hello, my name is <%= user.name %>!

  <%= form_for user do |f| %>
    <div class="field">
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :active, 'Active' %>
      <%= f.check_box :active %>
    </div>
    <div class="field">
      <%= f.label :cohort, 'Cohort' %>
      <%= f.select :cohort, 1..3 %>
    </div>
    <div class="field">
      <%= f.label :cohort, 'Cohort' %>
      <%= f.number_field :cohort, in:1..5 %>
    </div>
    <div class="field">
      <%= f.label :updated_at, 'Last Updated At (Date)' %>
      <%= f.date_field :updated_at %>
    </div>
    <div class="field">
      <%= f.label :updated_at, 'Last Updated At (Time)' %>
      <%= f.time_field :updated_at %>
    </div>
    <div class="field">
      <%= f.label :updated_at, 'Last Updated At (Month)' %>
      <%= f.month_field :updated_at %>
    </div>
    <div class="field">
      <%= f.label :name, 'Color' %>
      <%= f.color_field :name %>
    </div>
    <%= f.submit %>
  <% end %>

<% end %>
